<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_default_header" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Richard"
            android:textColor="@color/txt_deep"
            android:textSize="16sp"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="20dp"
            android:background="@color/light_grey"/>
        <RelativeLayout
            android:id="@+id/rl_person"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_person" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人主页"
                android:layout_marginLeft="40dp"
                android:textColor="@color/txt_deep"
                android:textSize="14sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_msg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  通   知"
                android:layout_marginLeft="40dp"
                android:textColor="@color/txt_deep"
                android:textSize="14sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_ground"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_ground" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  广   场"
                android:layout_marginLeft="40dp"
                android:textColor="@color/txt_deep"
                android:textSize="14sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_focus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_like" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  关   注"
                android:layout_marginLeft="40dp"
                android:textColor="@color/txt_deep"
                android:textSize="14sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_collect"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_collect" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  收   藏"
                android:layout_marginLeft="40dp"
                android:textColor="@color/txt_deep"
                android:textSize="14sp"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退     出"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_deep"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_exit" />

    </RelativeLayout>

</RelativeLayout>