<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.richedit.RichEditActivity">

    <include
        android:id="@+id/ic_header"
            layout="@layout/common_header"/>

    <RelativeLayout
        android:id="@+id/rl_select_pic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_bg_grey"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="32dp"
            android:layout_height="26dp"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_post_pic"/>
    </RelativeLayout>
    <ScrollView
            android:id="@+id/sv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_header"
            android:layout_above="@id/rl_select_pic"
            android:background="@color/white"
            android:layout_alignParentStart="true">
        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/et_new_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="我是妖娆的标题~"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:textSize="16sp"
                    android:textColor="@color/txt_middle_grey"
                    android:padding="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/bg_light_grey"/>
            <com.richard.stepcount.view.richedit.view.RichTextEditor
                    android:id="@+id/et_new_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:minHeight="300dp"
                    android:textColor="@color/txt_middle_grey"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
