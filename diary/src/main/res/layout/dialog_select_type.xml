<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_red_packge"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    android:background="@drawable/bg_round_white_card">

        <TextView
            android:id="@+id/tv_select_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择私密类型"/>
        <RadioGroup
            android:id="@+id/rg_fee_type"
            android:layout_below="@id/tv_select_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_private"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:checked="true"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/selector_theme_text"
                    android:textSize="13sp"
                    android:background="@drawable/selector_theme_bg"
                    android:text="私密"/>
                <RadioButton
                    android:id="@+id/rb_public"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@drawable/selector_theme_text"
                    android:textSize="13sp"
                    android:background="@drawable/selector_theme_bg"
                    android:text="公开"/>
                <RadioButton
                    android:id="@+id/rb_protect"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@drawable/selector_theme_text"
                    android:textSize="13sp"
                    android:background="@drawable/selector_theme_bg"
                    android:text="给Ta"/>
        </RadioGroup>

</RelativeLayout>

